{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext", //allows TypeScript to preserve ES import and export statements in the compiled JavaScript output
    "moduleResolution": "Node", // Ensures compatibility with node's resolution algorithm
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}